<h2>Pets at Shelter</h2>
<p>Pet Count = <%= @pets.count %></p>
<section class="index">
<% @pets.each do |pet| %>
  <div class="item">
    <%= image_tag pet.image, style: "width: 75%" %>
    <div class="header"><%= link_to "#{pet.name}", "/pets/<%= pet.id" %></div><br>
    <p><%= "Description: #{pet.description}" %></p>
    <p><%= "Age: #{pet.approximate_age}" %></p>
    <p><%= "Sex: #{pet.sex}" %></p>
    <p><%= "Adoption Status: #{pet.adoption_status}" %></p>
    <div class="links">
      <p><%= link_to "Edit Pet Information", "/pets/#{pet.id}/edit" %></p>
      <p><%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %></p>
    </div>
  </div>
<% end %>
</ section>
<br><%= link_to "Create Pet", "/shelters/#{@shelter_id}/pets/new" %></br>
